<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MyFriends"
    xmlns:thirdParty="clr-namespace:FishEyeDemo"
	x:Class="MyFriends.AddFriendImageWindow" 
	x:Name="Window"
	Title="MyFriends"
	Width="650" Height="550" Background="#FF414141" 
    Icon="../Images\myFriendsSmall.png" 
    ResizeMode="NoResize" 
    ShowInTaskbar="True" 
    WindowStyle="ToolWindow" 
    Loaded="Window_Loaded">

    <!-- Presentation Layout -->
    <Grid x:Name="GridOuter" Background="#FF000000" Height="Auto">
        <!--窗口的布局-->
	<Border BorderBrush="#FFD0601D" BorderThickness="4,4,4,4">
        <!--使用一个DockPanel进行上下两栏的布局-->
        <DockPanel Margin="0,0,0,0" 
                   LastChildFill="True" 
                   Background="#FF000000" 
                   Height="Auto" 
                   Width="Auto">
            <!--该DockPanel定义了标题栏-->
            <DockPanel VerticalAlignment="Top" 
                       Width="{Binding Path=ActualWidth, ElementName=GridOuter, Mode=Default}" 
                       Height="115" DockPanel.Dock="Top" LastChildFill="False" 
                       HorizontalAlignment="Left" x:Name="dpTop">
                <!--标题栏画布-->
                <Canvas x:Name="canvasTop" 
                        Height="90" 
                        DockPanel.Dock="Top" 
                        Width="{Binding Path=Width, ElementName=dpTop, Mode=Default}">
                    <!--渐变的背景色-->
                    <Canvas.Background>
                        <LinearGradientBrush EndPoint="0.628,0.051" 
                                             StartPoint="0.628,0.788">
                            <GradientStop Color="#FFD0601D" Offset="0"/>
                            <GradientStop Color="#FF6361AC" Offset="1"/>
                        </LinearGradientBrush>
                    </Canvas.Background>
                    <!--左侧的标题图片-->
                    <Image Width="90" Height="90" 
                           Canvas.Left="5" Canvas.Top="0" 
                           Source="../Images/myFriends.png"/>
                    <!--多媒体通讯录图片-->
                    <Image Width="250" Height="50" 
                           Canvas.Left="106" Canvas.Top="25" 
                           Source="../Images/MyFriendsWords.png"/>
                </Canvas>
                <!--下面的画布，显示文本信息-->
                <Canvas x:Name="canvasBottom" Height="25" 
                        Background="#FF000000" 
                        Width="{Binding Path=Width, ElementName=dpTop, Mode=Default}">
			    	<Label HorizontalAlignment="Left" 
                           VerticalAlignment="Top" Height="25.96" 
                           Content="为每个联系人选择一幅不同的图像，或者是单击下面的按钮滚动到你的文件夹" 
                           FontWeight="Bold" Foreground="#FFFFFFFF"/> 
				</Canvas>
            </DockPanel>
             <!--底部对齐并占满整个区域的DockPanel-->
            <DockPanel DockPanel.Dock="Bottom" 
                       LastChildFill="True" Height="400" Background="#FF763636">
                <!--使用第三方的FishEyePanel显示飞行图片集合-->
                <thirdParty:FishEyePanel x:Name="fishPanel" 
                                         Magnification="2" Margin="0,120,0,0" 
                                         VerticalAlignment="Top" 
                                         Height="122" Background="{x:Null}"/>
            </DockPanel>			 
		</DockPanel> 


	</Border>			
    	<Button x:Name="btnPrev" Click="btnPrev_Click" 
                Template="{DynamicResource GlassButton}" 
                ToolTip="获取上一个图像集合" 
                HorizontalAlignment="Left" Margin="17,130,0,0" 
                Width="30" VerticalAlignment="Top" Height="30"
                Content="&lt;&lt;" FontWeight="Bold" Foreground="#FFFFFFFF"/>			
    	<Button x:Name="btnNext" Click="btnNext_Click" 
                Template="{DynamicResource GlassButton}" 
                ToolTip="获取下一个图像集合" Width="30" 
                Content="&gt;&gt;"   Height="30" 
                HorizontalAlignment="Left" Margin="55,130,0,0"
                VerticalAlignment="Top" FontWeight="Bold"
                Foreground="#FFFFFFFF"/>			
    	<CheckBox HorizontalAlignment="Left" Margin="105,139,0,0" 
                  x:Name="chkUseReflectedImages" VerticalAlignment="Top"
                  Width="145" Height="16" Content="反射图像" 
                  Foreground="#FFFFFFFF" Click="chkUseReflectedImages_Click"/>			
    	<Label Height="26" Content="Label"  HorizontalAlignment="Right" 
               Margin="0,134,9,0" x:Name="lblCurrentFolder" 
               VerticalAlignment="Top" Width="286" Foreground="#19FFFFFF"/>			
    	<Label Height="26" Content="Label"  HorizontalAlignment="Right" 
               Margin="0,155,9,0" x:Name="lblImageCount" 
               VerticalAlignment="Top" Width="286" Foreground="#19FFFFFF"/>			
    </Grid>			 
</Window>