<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MyFriends"
	x:Class="MyFriends.OptionsWindow" 
	x:Name="Window"
	Title="MyFriends"
	Width="750" Height="670" Background="#FF000000" 
    Icon="../Images\myFriendsSmall.png" 
    Loaded="Window_Loaded" ResizeMode="NoResize" 
    ShowInTaskbar="True" WindowStyle="ToolWindow">

    <!-- Presentation Layout -->
    <Grid x:Name="GridOuter" Background="#FF000000" Height="Auto">
	<Border BorderBrush="#FFD0601D" BorderThickness="4,4,4,4">	
        <DockPanel Margin="0,0,0,0" LastChildFill="True" 
                   Background="#FF414141" HorizontalAlignment="Left" 
                   Width="Auto" Height="Auto">
            <DockPanel VerticalAlignment="Top" Height="113" 
                       DockPanel.Dock="Top" LastChildFill="False" 
                       HorizontalAlignment="Left" x:Name="dpTop" 
                       Width="{Binding Path=ActualWidth, 
                ElementName=Window, Mode=Default}">
                <Canvas x:Name="canvasTop" Height="90" 
                        DockPanel.Dock="Top" 
                        Width="{Binding Path=ActualWidth, 
                    ElementName=Window, Mode=Default}">
                    <Canvas.Background>
                        <LinearGradientBrush EndPoint="0.628,0.051" 
                                             StartPoint="0.628,0.788">
                            <GradientStop Color="#FFD0601D" Offset="0"/>
                            <GradientStop Color="#FF9817FF" Offset="1"/>
                        </LinearGradientBrush>
                    </Canvas.Background>
                    <Image Width="90" Height="90" Canvas.Left="5" 
                           Canvas.Top="0" Source="../Images/myFriends.png"/>
                    <Image Width="250" Height="50" Canvas.Left="106" 
                           Canvas.Top="25" Source="../Images/MyFriendsWords.png"/>
                </Canvas>
                <Canvas x:Name="canvasBottom" Height="25" 
                        Background="#FF289556" 
                        Width="{Binding Path=ActualWidth, 
                    ElementName=Window, Mode=Default}">
			    	<Label HorizontalAlignment="Left" 
                           VerticalAlignment="Top" 
                           Height="25.96" 
                           Content="在此配置联系人信息" 
                           FontWeight="Bold" 
                           Foreground="#FFFFFFFF"/> 
				</Canvas>
            </DockPanel>

            <DockPanel DockPanel.Dock="Bottom" 
                       LastChildFill="True" 
                       Height="Auto" 
                       Background="#FF000000">

    <!-- 定义选择样式风格的单选框-->
    <Canvas x:Name="mainCanvasTop" 
            DockPanel.Dock="Top" Height="453" 
            Width="Auto" Background="#FFC0D3C8">
        <!--选择显示风格的StackPanel面板布局-->
        <StackPanel Orientation="Vertical" 
                    x:Name="spDisplay" 
                    Background="{x:Null}" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" Width="172" Height="125" 
                    Margin="0,0,0,0" Canvas.Left="544" Canvas.Top="30">
            <!--定义一个圆角的边框控件-->
            <Border CornerRadius="5,5,0,0" 
                    Width="{Binding Path=ActualWidth, ElementName=spDisplay, Mode=Default}" 
                    HorizontalAlignment="Left">
                <!--定义边框的渐变背景色-->
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.508,-0.259" 
                                         StartPoint="0.508,1.124">
                        <GradientStop Color="#FFD0601D" Offset="0"/>
                        <GradientStop Color="#FFFFB917" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <!--定义标题文本-->
                <TextBox Text="设置风格" Background="{x:Null}" 
                         BorderBrush="{x:Null}" FontWeight="Bold" 
                         Foreground="#FFFFFFFF"/>
            </Border>
            <!--创建圆角边框-->
            <Border CornerRadius="0,0,5,5" HorizontalAlignment="Left"  
                    Width="{Binding Path=ActualWidth, 
                ElementName=spDisplay, Mode=Default}" 
                    Background="#FFFFFFFF" 
                    BorderThickness="0,0,0,0" 
                    Height="101">
                <!--在内部放一个StackPanel进行布局-->
                <StackPanel Orientation="Vertical" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Width="157" Height="65" 
                            Margin="0,10,0,0">
                    <!--定义两个显示风格的单选框-->
                    <RadioButton x:Name="GrowAndShrink" 
                                 Content="缩放效果" FontWeight="Normal" 
                                 Foreground="#FF000000" Width="156"
                                 Checked="RadioButton_Checked"/>
                    <RadioButton x:Name="threeD" 
                                 Content="3D效果" FontWeight="Normal"
                                 Foreground="#FF000000" Margin="0,20,0,0"
                                 Checked="RadioButton_Checked"/>
                </StackPanel>
            </Border>
        </StackPanel>

                    <StackPanel Orientation="Vertical" 
                                x:Name="spTree" 
                                Background="{x:Null}"
                                Width="491.037" 
                                Canvas.Left="23" 
                                Canvas.Top="30" 
                                Height="406">
                        <Border CornerRadius="5,5,0,0" 
                                Width="{Binding Path=ActualWidth, ElementName=spTree, Mode=Default}" HorizontalAlignment="Left">
            	            <Border.Background>
            		            <LinearGradientBrush EndPoint="0.508,-0.259" StartPoint="0.508,1.124">
            			            <GradientStop Color="#FFD0601D" Offset="0"/>
            			            <GradientStop Color="#FFFFB917" Offset="1"/>
            		            </LinearGradientBrush>
            	            </Border.Background>
                            <TextBox Text="设置图像文件夹" Background="#FF66AD83" 
                                     BorderBrush="{x:Null}" 
                                     FontWeight="Bold" Foreground="#FFB65454"/>
                        </Border>
<Border CornerRadius="0,0,5,5" HorizontalAlignment="Left"  
Width="{Binding Path=ActualWidth, ElementName=spTree, Mode=Default}" 
Background="#FFFFFFFF" BorderThickness="0,0,0,0" Height="381">
<TreeView x:Name="foldersItem" 
  SelectedItemChanged="foldersItem_SelectedItemChanged" 
  Width="Auto" Background="#FFFFFFFF" BorderBrush="#FFFFFFFF" 
  Foreground="#FFFFFFFF" Margin="5,5,5,5" Height="362">
    <!--TreeView控件的资源区，定义了节点的显示风格-->
<TreeView.Resources>
<Style TargetType="{x:Type TreeViewItem}">
    <Setter Property="HeaderTemplate">
        <Setter.Value>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <!--定义一个用于显示文件夹图标的图像文件，其Source绑定到TreeView的节点-->
                    <!--通过Converter属性将绑定的Source转换为特定的图像文件-->
                    <Image Name="img"  
                           Width="25" Height="25" Stretch="Fill" 
                        Source="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                        AncestorType={x:Type TreeViewItem}}, 
                        Path=Header, 
                        Converter={x:Static local:HeaderToImageConverter.Instance}}"       
                     />
                    <!--显示选中的文件夹名称-->
                    <TextBlock Text="{Binding}" Margin="5,0" />
                </StackPanel>
              </DataTemplate>
        </Setter.Value>
    </Setter>
</Style>
</TreeView.Resources>
</TreeView>
</Border>
</StackPanel>
</Canvas>
                <Canvas x:Name="mainCanvasBottom" 
                        DockPanel.Dock="Bottom" Height="34" 
                        Background="#FF000000">
                        <Button Width="105" x:Name="btnClose" 
                                Height="25"
                                Template="{DynamicResource GlassButton}" 
                                ToolTip="关闭和保存设置" Content="保     存" 
                                BorderThickness="1,1,1,1" FontFamily="Ser" 
                                FontSize="12" FontWeight="Normal" Foreground="#FFFFFFFF" 
                                HorizontalAlignment="Right" Canvas.Left="608" 
                                Click="btnClose_Click" Canvas.Top="2"/>
                 </Canvas>
             </DockPanel>			 
		</DockPanel> 
	</Border>				
    </Grid>			 
</Window>